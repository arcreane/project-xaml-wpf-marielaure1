<Window x:Class="WpfGameMap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Map" Height="450" Width="800">
    <Grid>
        <Image Source="map.png" Stretch="Fill" MouseDown="Map_MouseDown">
            <Image.Resources>
                <!-- Marqueur de joueur -->
                <Ellipse x:Key="PlayerMarker" Width="20" Height="20" Fill="Red" Stroke="Black" StrokeThickness="2" />
            </Image.Resources>
            <!-- Marqueur de joueur initial -->
            <ContentPresenter Name="playerMarker" Content="{StaticResource PlayerMarker}" Visibility="Hidden" />
        </Image>
    </Grid>
</Window>
