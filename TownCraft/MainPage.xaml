<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Towncraft.MainPage">

    <VerticalStackLayout  Padding="30" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">

        <Label Text="TownCraft" FontSize="70" FontAttributes="Bold" TextColor="#CC22778A" HorizontalOptions="Center" Margin="0, 30"/>

        <Button Text="Créer une partie" Clicked="NewGameButton_Click" BackgroundColor="#CC22778A" TextColor="White" WidthRequest="200" Margin="0,10"/>
        <Button Text="Charger une partie" Clicked="LoadGameButton_Click" BackgroundColor="#CC22778A" TextColor="White" WidthRequest="200" Margin="0,10"/>
        <Button Text="Quitter" Clicked="QuitButton_Click" BackgroundColor="#CC22778A" TextColor="White" WidthRequest="200" Margin="0,10"/>
    </VerticalStackLayout>
</ContentPage>
